<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/jugadorB"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D81919"
        android:text="Jugador B"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="251dp" />

    <Button
        android:id="@+id/jugadorA"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="Jugador A"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="41dp" />

    <TextView
        android:id="@+id/p2"
        android:layout_width="76dp"
        android:layout_height="23dp"
        android:layout_marginTop="11dp"
        android:text="Esperancita"
        app:layout_constraintTop_toBottomOf="@+id/jugadorB"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="266dp" />

    <Button
        android:id="@+id/btn_pos20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pos10"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_pos22"
        app:layout_constraintStart_toEndOf="@+id/btn_pos20"
        app:layout_constraintTop_toBottomOf="@+id/btn_pos11"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pos12"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pos00"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_pos12"
        app:layout_constraintStart_toEndOf="@+id/btn_pos10"
        app:layout_constraintTop_toBottomOf="@+id/btn_pos01"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pos02"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="257dp" />

    <Button
        android:id="@+id/btn_pos01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_pos02"
        app:layout_constraintStart_toEndOf="@+id/btn_pos00"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="257dp" />

    <Button
        android:id="@+id/btn_pos00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="257dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Examen Grupal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Juego"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/p1"
        android:layout_width="76dp"
        android:layout_height="23dp"
        android:layout_marginTop="11dp"
        android:text="Patrona"
        app:layout_constraintTop_toBottomOf="@+id/jugadorA"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp" />

</androidx.constraintlayout.widget.ConstraintLayout>