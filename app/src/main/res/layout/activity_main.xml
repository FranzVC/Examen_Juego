<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/jugadorB"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D81919"
        android:text="Jugador B"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/jugadorA"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/jugadorA"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="Jugador A"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/p2"
        android:layout_width="76dp"
        android:layout_height="23dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        android:text="Esperancita"
        app:layout_constraintStart_toEndOf="@+id/p1"
        app:layout_constraintTop_toBottomOf="@+id/jugadorB"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:onClick="clickButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pos10"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:onClick="clickButton"
        app:layout_constraintEnd_toStartOf="@+id/btn_pos22"
        app:layout_constraintStart_toEndOf="@+id/btn_pos20"
        app:layout_constraintTop_toBottomOf="@+id/btn_pos11"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:onClick="clickButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pos12"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:onClick="clickButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pos00"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:onClick="clickButton"
        app:layout_constraintEnd_toStartOf="@+id/btn_pos12"
        app:layout_constraintStart_toEndOf="@+id/btn_pos10"
        app:layout_constraintTop_toBottomOf="@+id/btn_pos01"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:onClick="clickButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pos02"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:onClick="clickButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_pos00"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:onClick="clickButton"
        app:layout_constraintEnd_toStartOf="@+id/btn_pos02"
        app:layout_constraintStart_toEndOf="@+id/btn_pos00"
        app:layout_constraintTop_toTopOf="@+id/btn_pos00"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_pos00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="84dp"
        android:onClick="clickButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Juego"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p1"
        android:layout_width="76dp"
        android:layout_height="23dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="8dp"
        android:text="Patrona"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jugadorA"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>